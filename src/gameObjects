function Ship(length, isHit, isSunk){
    this.length = length;
    this.isHit = isHit;
    this.isSunk = isSunk;
    this.health = makeHealth(length);

    Ship.prototype.hit = (int) => {
        this.health[int] = true;
        return this.health;
    }    

    function makeHealth(length){
        let healthArr = []
        for(let x = 0; x < length; x++){
            healtherArr = healthArr.push(false);
        }
        return healthArr;
    }
}
module.exports = Ship;